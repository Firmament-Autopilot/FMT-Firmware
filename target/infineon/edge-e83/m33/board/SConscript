import os
import rtconfig
from building import *

Import("SDK_LIB")

objs = []
cwd = GetCurrentDir()
list = os.listdir(cwd)

# add general drivers
src = Glob('*.c')

path = [cwd]

startup_path_prefix = SDK_LIB
Tool_path = None
index = "mtb-device-support-pse8xxgp"

for filename in os.listdir(startup_path_prefix):
    if index in filename:
        Tool_path = os.path.join(startup_path_prefix, filename)



