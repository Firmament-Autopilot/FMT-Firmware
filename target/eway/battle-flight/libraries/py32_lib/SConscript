src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_usart.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_gpio.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_sdmmc.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_usb.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_spi.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_i2c.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_adc.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_tim.c')

src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_sd.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_gpio.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_exit.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_dma.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_rcc.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_rcc_ex.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_rtc.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_rtc_ex.c')
