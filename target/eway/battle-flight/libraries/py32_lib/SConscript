import rtconfig
Import('RTT_ROOT')
from building import *

# get current directory
cwd = GetCurrentDir()

# The set of source files associated with this SConscript file.
src = []
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_rcc.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_rtc.c')
src += Glob('PY32E407_HAL_Driver/Src/py32e407_ll_exti.c')
