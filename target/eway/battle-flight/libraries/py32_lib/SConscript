src += Glob('PY32E407_HAL_Driver/Src/py32e407_hal_cortex.c')


#add for startup script 
if rtconfig.CROSS_TOOL == 'gcc':
    src = src + ['CMSIS/Device/PUYA/PY32E407/Source/Templates/gcc/startup_py32e407xx.s']
elif rtconfig.CROSS_TOOL == 'iar':
    src = src + ['CMSIS/Device/PUYA/PY32E407/Source/Templates/iar/startup_py32e407xx.s']
elif rtconfig.CROSS_TOOL == 'keil':
    src = src + ['CMSIS/Device/PUYA/PY32E407/Source/Templates/arm/startup_py32e407xx.s']

#add for DSP library
src += Glob('CMSIS/DSP/Source/CommonTables/*.c')
src += Glob('CMSIS/DSP/Source/FastMathFunctions/*f32.c')
src += Glob('CMSIS/DSP/Source/BasicMathFunctions/*f32.c')
# src += Glob('CMSIS/DSP/Source/MatrixFunctions/*f32.c')
# src += Glob('CMSIS/DSP/Source/SupportFunctions/*f32.c')

path = [cwd + '/PY32E407_HAL_Driver/Inc', 
        cwd + '/CMSIS/Device/PUYA/PY32E407/Include',
        cwd + '/CMSIS/DSP/Include',
	    cwd + '/CMSIS/Include']

group = DefineGroup('PY32_HalPeriph', src, depend = [''], CPPPATH = path)

Return('group')
