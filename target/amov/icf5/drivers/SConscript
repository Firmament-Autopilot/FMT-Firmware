import os
from building import *
Import('RTT_ROOT')

cwd = GetCurrentDir()

src = Glob('*.c')
src += Glob('sdio/*.c')
src += Glob('usbd/*.c')
src += Glob('can/*.c')


inc = [cwd]
inc += [cwd + '/sdio']
inc += [cwd + '/usbd']
inc += [cwd + '/can']

group = DefineGroup('PeripheralDriver', src, depend = [''], CPPPATH = inc)

Return('group')