{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FMUv5 Debug J-Link",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "target/pixhawk/fmu-v5/build/fmt_fmuv5.elf",
            "serverpath": "${env:JLINK_SERVER}",
            "servertype": "jlink",
            "device": "STM32F765II",
            "interface": "swd",
            "armToolchainPath": "${env:RTT_EXEC_PATH}",
            "serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
            "svdFile": "target/pixhawk/fmu-v5/STM32F7x5.svd",
            // "runToMain": true,
            // "runToEntryPoint": "main",
        },
        {
            "name": "CUAV V5+ Debug J-Link",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "target/cuav/v5_plus/build/fmt_cuav-v5+.elf",
            "serverpath": "${env:JLINK_SERVER}",
            "servertype": "jlink",
            "device": "STM32F765II",
            "interface": "swd",
            "armToolchainPath": "${env:RTT_EXEC_PATH}",
            "serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
            "svdFile": "target/cuav/v5_plus/STM32F7x5.svd",
            "runToMain": true
        },
        {
            "name": "FMUv2 Debug J-Link",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "target/pixhawk/fmu-v2/build/fmt_fmuv2.elf",
            "serverpath": "${env:JLINK_SERVER}",
            "servertype": "jlink",
            "device": "STM32F427VI",
            "interface": "swd",
            "armToolchainPath": "${env:RTT_EXEC_PATH}",
            "serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
            "svdFile": "target/pixhawk/fmu-v2/STM32F427.svd",
            "runToMain": true
        },
        {
            "name": "QEMU Debug gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/qemu/qemu-vexpress-a9/build/fmt_fmu.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "QEMU debug preLaunchTask (linux)",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:RTT_EXEC_PATH}/arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}